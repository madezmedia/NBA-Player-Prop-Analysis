# Groq AI Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768  # Optional: specify default model

# RapidAPI Configuration for Basketball-Head API
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=basketball-head.p.rapidapi.com

# Optional: Additional API Keys
OPENAI_API_KEY=  # For alternative AI models
BASKETBALL_REFERENCE_API_KEY=  # Additional stats sources

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=basketball_ai.log

# Performance Settings
CACHE_ENABLED=True
CACHE_EXPIRATION_MINUTES=60

# Prediction Confidence
PREDICTION_CONFIDENCE_THRESHOLD=0.7

# OCR Configuration
TESSERACT_PATH=/usr/local/bin/tesseract  # Adjust based on your system

# Error Tracking (Optional)
SENTRY_DSN=  # Sentry.io error tracking integration

# Development Flags
DEBUG=False
DEVELOPMENT_MODE=False

# Optional: Proxy Settings
HTTP_PROXY=
HTTPS_PROXY=

# Machine Learning Model Paths (Optional)
ML_MODEL_PATH=models/basketball_predictor.pkl

# Streamlit Specific (Optional)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Security Settings
SECRET_KEY=generate_a_random_secret_key_here

# Experimental Features
ENABLE_ADVANCED_ANALYTICS=False
ENABLE_BETA_FEATURES=False
